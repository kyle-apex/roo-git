{
  "name": "roo-git",
  "displayName": "Roo Git",
  "version": "1.0.0",
  "description": "A VS Code extension for Git operations",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onView:roo-git-view"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "roo-git-sidebar",
          "title": "Roo Git",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "roo-git-sidebar": [
        {
          "id": "roo-git-view",
          "name": "Roo Git",
          "type": "webview",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "roo-git.showWebview",
        "title": "Show Roo Git"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "tsc -p ./",
    "compile:webview": "cd webview && webpack",
    "watch": "npm run watch:extension",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "cd webview && webpack --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "echo \"No linting configured\"",
    "test": "node ./out/test/runTest.js"
  },
  "keywords": [
    "vscode",
    "extension",
    "react",
    "webview"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/vscode": "^1.98.0",
    "css-loader": "^7.1.2",
    "esbuild": "^0.25.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "vscode-test": "^1.6.1",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
